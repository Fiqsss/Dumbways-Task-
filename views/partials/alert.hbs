{{#if flash.message}}
<script>
    Swal.fire({
        text: "{{flash.message}}",
        icon: "{{flash.type}}",
        confirmButtonText: "OK"
    }).then(() => {
        window.history.replaceState(null, null, window.location.pathname);
    });
</script>
